<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/opt_alert_dialog_shape"
    android:gravity="center"
    android:minWidth="320dp"
    android:padding="24dp">

    <ProgressBar
        android:id="@+id/m_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/loading_dialog_progress" />

    <TextView
        android:id="@+id/m_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_toEndOf="@id/m_progress_bar"
        android:layout_toRightOf="@id/m_progress_bar" />

</RelativeLayout>