<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hs.libs.sample.common.CommonTitleView
        android:id="@+id/app_common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_standard"
            android:layout_width="0dp"
            android:layout_height="@dimen/x120"
            android:layout_weight="1"
            android:text="standard" />

        <Button
            android:id="@+id/bt_singletop"
            android:layout_width="0dp"
            android:layout_height="@dimen/x120"
            android:layout_weight="1"
            android:text="singletop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_singletask"
            android:layout_width="0dp"
            android:layout_height="@dimen/x120"
            android:layout_weight="1"
            android:text="singletask" />

        <Button
            android:id="@+id/bt_singleinstance"
            android:layout_width="0dp"
            android:layout_height="@dimen/x120"
            android:layout_weight="1"
            android:text="singleinstance" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_activity_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>