<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <lib.hs.com.hsbaselib.view.ClearableEdittext
        android:id="@+id/event_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_marginTop="@dimen/y24"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="请输入事件名称"
        android:paddingLeft="@dimen/x22"
        android:paddingRight="@dimen/x22"
        android:textColor="@color/black_333"
        android:textColorHint="#999999"
        android:textSize="16sp" />

    <lib.hs.com.hsbaselib.view.ExtendEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="密码"
        android:paddingLeft="0dp"
        android:password="true"
        android:singleLine="true"
        android:textSize="18sp"
        app:labelColor="#18b4ed"
        app:labelText="密码"
        app:maxLength="12"
        app:overlengthColor="@android:color/holo_red_light"
        app:preLineColor="#18b4ed" />

    <lib.hs.com.hsbaselib.view.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="This is the hint" />
    </lib.hs.com.hsbaselib.view.floatlabelededittext.FloatLabeledEditText>

    <!-- add some padding -->
    <lib.hs.com.hsbaselib.view.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        float:fletPadding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username" />
    </lib.hs.com.hsbaselib.view.floatlabelededittext.FloatLabeledEditText>

    <!-- password input -->
    <lib.hs.com.hsbaselib.view.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        float:fletPaddingBottom="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />
    </lib.hs.com.hsbaselib.view.floatlabelededittext.FloatLabeledEditText>

    <!-- change color of hint text-->
    <lib.hs.com.hsbaselib.view.floatlabelededittext.FloatLabeledEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        float:fletPaddingBottom="10dp"
        float:fletTextAppearance="@style/floatlabelededittext">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Styled Hint"
            android:inputType="textPassword" />
    </lib.hs.com.hsbaselib.view.floatlabelededittext.FloatLabeledEditText>

</LinearLayout>
